        <Button Content="Ganancia Total" Height="28" HorizontalAlignment="Left" Margin="154,231,0,0" Name="btnTotal" Style="{StaticResource btn_style}" TabIndex="16" VerticalAlignment="Top" Width="118" Click="btnTotal_Click"/>
        <Label Content="Calcular ganancia entre fechas" Height="28" HorizontalAlignment="Left" Margin="134,12,0,0" Name="label1" VerticalAlignment="Top" Width="173" />
        <Label Content="Calcular ganancia de un día" Height="28" HorizontalAlignment="Left" Margin="134,132,0,0" Name="label2" VerticalAlignment="Top" Width="173" />
        <Label Content="Calcular ganancia hasta ahora" Height="28" HorizontalAlignment="Left" Margin="120,205,0,0" Name="label3" VerticalAlignment="Top" Width="173" />
    </Grid>
</Window>
