            <GradientStop Color="#FF2A565C" Offset="0.9" />
            <GradientStop Color="#FF31656D" Offset="0.679" />
            <GradientStop Color="#FF377079" Offset="1.612" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid Height="271" Width="414">
        <Button Content="Calcular Ganancia" Height="28" HorizontalAlignment="Left" Margin="154,89,0,0" Name="btnGanFec" Style="{StaticResource btn_style}" TabIndex="16" VerticalAlignment="Top" Width="126" Click="btnGanFec_Click" />
        <DatePicker Height="25" HorizontalAlignment="Left" IsManipulationEnabled="True" Margin="24,45,0,0" Name="dPFechaI" SelectedDateFormat="Short" TabIndex="15" VerticalAlignment="Top" Width="128" />
        <DatePicker Height="25" HorizontalAlignment="Left" IsManipulationEnabled="True" Margin="258,45,0,0" Name="dPFechaF" SelectedDateFormat="Short" TabIndex="15" VerticalAlignment="Top" Width="128" />
        <Separator Height="19" HorizontalAlignment="Left" Margin="0,118,0,0" Name="separator1" VerticalAlignment="Top" Width="418" />
        <DatePicker Height="25" HorizontalAlignment="Left" IsManipulationEnabled="True" Margin="24,155,0,0" Name="dPGanancia" SelectedDateFormat="Short" TabIndex="15" VerticalAlignment="Top" Width="128" />
        <Button Content="Calcular Ganancia" Height="28" HorizontalAlignment="Left" Margin="258,155,0,0" Name="btnOneFecGan" Style="{StaticResource btn_style}" TabIndex="16" VerticalAlignment="Top" Width="126" Click="btnOneFecGan_Click" />
